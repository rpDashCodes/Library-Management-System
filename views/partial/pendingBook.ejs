<% pendingIssue.forEach((book)=>{ %>
    <div class="card-container card">
        <div class="member-card">
            <div class="information">
                <strong class="issueId">Issue Id: <div><%= book.issueId %></div></strong>
                <strong class="userName">Issued By:<div><%= book.memberName %></div></strong>
                <strong class="bookName">Required Book:<div><%= book.bookName%></div></strong>
                <strong class="date">Issue Date:<div><%= book.issueDate %></div></strong>
            </div>
            <div class="action">
                <div class="action-button" role="button"><img src="/image/approve.svg" id="<%= book.issueId %>" class="approve-button"></div>
                <div class="action-button" role="button"><img src="/image/delete.svg" id="<%= book.issueId %>" class="reject-button"></div>
            </div>
        </div>
    </div>
    <% }); %>